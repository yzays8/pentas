<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Toolbar" parent="GtkBox">
    <property name="orientation">horizontal</property>
    <child>
      <object class="GtkButton" id="backward_button">
        <signal name="clicked" handler="on_backward_button_clicked" swapped="true"/>
        <property name="label">←</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="css-classes">circular</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="forward_button">
        <signal name="clicked" handler="on_forward_button_clicked" swapped="true"/>
        <property name="label">→</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <property name="css-classes">circular</property>
      </object>
    </child>
    <child>
      <object class="GtkEntry" id="entry">
        <signal name="activate" handler="on_entry_activated" swapped="true"/>
        <property name="placeholder-text">Type a URL</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
      </object>
    </child>
  </template>
</interface>
